<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}DM Helper{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" media="screen" href="{{ asset('/css/generated/main.css') }}"
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    {% block body %}
        <div id="app">
            <div v-cloak v-if="players.count > 0" v-for="player in players">
            </div>
            <div v-cloak v-else>
                <p>No players found.</p>
            </div>
        </div>
    {% endblock %}
    <script src="{{ asset('/js/generated/main.js') }}"></script>
    {% block scripts %}
        <script type="text/javascript">
            createApp({
                data() {
                    return {
                        players: {{ players | json_encode | raw }}
                    };
                },
                delimiters: ['${', '}']
            }).mount('#app');
        </script>
    {% endblock %}
</body>
</html>
